import java.util.*;
public class dpattern{
public static void main(String args[]){
Scanner obj=new Scanner(System.in);
System.out.print("enter no of rows:");
int n=obj.nextInt();
for(int i=0;i<n;i++){
for(int j=2*(n-i);j>0;j--){
System.out.print(" ");
}
for(int k=0;k<=i;k++){
System.out.print("* ");
}
System.out.println();
}
}
}
